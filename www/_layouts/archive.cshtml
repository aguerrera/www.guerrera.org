<html>
<head>
    <link rel="stylesheet" type="text/css" href="/static/blueprint/screen.css"> 
	<!--[if lt IE 8]>
		<link href="/static/blueprint/ie.css")" rel="stylesheet" type="text/css" />
	<![endif]-->
    <link rel="stylesheet" type="text/css" href="/static/site.css">
	<link rel="alternate" href="http://www.guerrera.org/rss.xml" title="A. Guerrera" type="application/rss+xml" /> 
	<title>@Model.Title</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><a href="http://www.guerrera.org/">Andy Guerrera / www.guerrera.org</a></h1>
        </div>
        <div class="content">
            <div>
            @Model.Content
            </div>

            @{
                var posts = Model.Posts.OrderByDescending(x => x.Created);
            }
            <ul>
            @foreach (var post in posts) 
            {
                <li><a href="/@post.Url">@post.Title</a></li>
            }
            </ul>
        </div>
        <div class="footer">
            All content &copy Andy Guerrera
            |
            <a href="http://twitter.com/">Twitter</a>
            |
            <a href="http://guerreralaw.com/">Guerrera Law</a>
            |
            <a href="/archive.html">Archive</a>
            |
            <a href="http://www.guerrera.org/rss.xml">RSS</a>
            |
            Static HTML built with <a href="https://github.com/aguerrera/Garoozis">Garoozis</a>
        </div>
    </div>
	<script type="text/javascript"> 
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-3994889-2']);
		_gaq.push(['_trackPageview']);
		(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();
	</script> 
</body>
</html>
