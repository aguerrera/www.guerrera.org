<html>
<head>
    <link rel="stylesheet" type="text/css" href="/static/blueprint/screen.css"> 
	<!--[if lt IE 8]>
		<link href="/static/blueprint/ie.css")" rel="stylesheet" type="text/css" />
	<![endif]-->
    <link href='http://fonts.googleapis.com/css?family=Quattrocento+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="/static/site.css"> 
	<link rel="alternate" href="http://www.guerrera.org/rss.xml" title="A. Guerrera" type="application/rss+xml" /> 
    <title>@Model.Title</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <span class="span-21"><h1><a href="http://www.guerrera.org/">guerrera.org</a></h1></span>
            <span class="span-2"><img src="/static/owl.png" /></span>
			<div class="clear"></div>
        </div>
		<div class="subheader">Personal Blog/Website of Andy Guerrera</div>
        <div class="content clear">
            <div class="post">
                <h2><a href="/@Model.Page.Url">@Model.Title</a></h2>
                <div class="date">@Model.Page.Created.ToString("d MMM yyyy H:mm") EST</div>
                <div class="postcontent">
                    @Model.Content
                </div>
            </div>
            <div class="pager">
            @if (Model.PrevPost.Title != "")
            {
                <span class="prev">Previously: <a href="/@Model.PrevPost.Url">@Model.PrevPost.Title</a></span>
            }
            @if (Model.NextPost.Title != "")
            {
                @if (Model.PrevPost.Title != "")
                {
                <span> | </span>
                }
                <span class="next">Next: <a href="/@Model.NextPost.Url">@Model.NextPost.Title</a></span>
            }
            </div>

			<div>

<div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'guerreraorg'; 
    var disqus_identifier = '@Model.Page.Url';
    var disqus_url = 'http://www.guerrera.org/@Model.Page.Url';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
